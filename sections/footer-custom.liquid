<style>
  #footer-section ul.order-list li {
    list-style: none;
}
#footer-section ul.order-list {
    flex-wrap: wrap;
    gap: 0rem;
    position: fixed;
    bottom: 0;
    left: 50%;
    display: flex;
    transform: translate(-50%, 0);
    background: #121212;
    width: 100%;
    justify-content: center;
    margin: 0 auto;
    padding:0;
}
#footer-section ul.order-list li {
    list-style: none;
    padding: 1rem 0;
    display: flex;
    flex-wrap: wrap;
    min-width: 100px;
    justify-content: center;
}
#footer-section ul.order-list li a {
    color: #fff;
    text-decoration: none;
    font-size: 16px;
    line-height: 24px;
    padding: 0;
    text-align: center;
}
#footer-section ul.order-list li svg {
    fill: #fff;
    width: 100%;
    text-align: center;
}
div#footer-section {
    background: #121212;
    padding: 1rem 0;
}
  #footer-section ul.order-list li p {
    margin: 0;
}
#footer-section ul.order-list li:hover {
    background: #fff;
}
#footer-section ul.order-list li:hover p {
    color: #121212;
}
#footer-section ul.order-list li:hover img{
  filter:inherit;
  -webkit-filter:inherit;
  -moz-filter:inherit;
  -ms-filter:inherit;
}
#footer-section ul.order-list li img {
    filter: invert(1);
    -webkit-filter: invert(1);
    -moz-filter: invert(1);
    -ms-filter: invert(1);
}
#footer-section ul.order-list li.menu-item {
  display: none;
}
#footer-section ul.order-list .dropdown {
  position: absolute;
  left: 50%;
  transform: translate(-50%,-100%);
  -webkit-transform: translate(-50%,-100%);
  -moz-transform: translate(-50%,-100%);
  -ms-transform: translate(-50%,-100%);
  top: 50%;
  margin-top: -35px;
  text-align: center;
}
#footer-section ul.order-list .dropdown .dropdown-content {
  background: #000000;
}
#footer-section ul.order-list .dropdown .dropbtn {
  padding: 15px;
  visibility: hidden;
}
#footer-section ul.order-list li:nth-child(1) {
  position: relative;
}
#footer-section ul.order-list .dropdown-content {
  display: none;
  {% comment %} background: #fff;
  color: #121212;
  max-height: 550px;
  max-width:100px;
  overflow: auto; {% endcomment %}
  {% comment %} overflow-X: hidden; {% endcomment %}
}
.collection-box .product-collection {
  display: none;
  white-space: nowrap;
  max-width: 300px;
  overflow: auto;
  left: 100px;
  position: absolute;
  max-height:100px;
  transition: all 0.4s linear;
  -webkit-transition: all 0.4s linear;
  -moz-transition: all 0.4s linear;
  -ms-transition: all 0.4s linear;
}
#footer-section ul.order-list .dropdown-content span{
  color:#121212;
}
#footer-section ul.order-list li:hover .dropdown-content {
  display: block;
}
#footer-section ul.order-list .dropdown-content .dropdown-src img {
  padding: 0 8px;
}
#footer-section ul.order-list .dropdown-content .dropdown-src {
  background: #fff;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  margin-bottom: 0px;
}
#footer-section ul.order-list .dropdown-content .dropdown-src span {
  font-size: 11px;
  line-height: 18px;
  padding: 0 5px;
  text-transform: uppercase;
  font-weight: 600;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  width: 100%;
}
#footer-section ul.order-list li .dropdown .dropdown-content .collection-box:hover .product-collection {
  display: flex;
  margin-top: -100px;
}
#footer-section ul.order-list .product-collection .dropdown-product img {
  width: 100%;
  object-fit:cover;
}
#footer-section ul.order-list li a.dropdown-src > .dropdown .dropdown-src .collection-box > .dropdown-src {
  position: relative;
}

.product-collection a.dropdown-product {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  margin-bottom: 2rem;
  position: relative;
}
.collection-box .product-collection .dropdown-product span {
  font-size: 12px;
  line-height: 17px;
  padding: 0 7px;
  font-weight: bold;
  position: absolute;
  content: "";
  top: 3px;
  white-space: normal;
  text-align: left;
}
.product-collection a.dropdown-product img {
  max-width: 100%;
  min-width: 80px;
  min-height: 80px;
  object-fit: contain;
}
.collection-box .dropdown-src:hover ~ .product-collection .dropdown-product img {
  min-width: 60px;
  object-fit: cover;
  min-height: 100px;
}
.product-collection a.dropdown-product::before {
  position: absolute;
  content: "";
  width: 100%;
  height: 100%;
}
.collection-box {
    max-width: 100px;
    margin-bottom: 3px;
}
/* Works on Firefox */
#footer-section ul.order-list .dropdown-content {
  scrollbar-width: thin;
  scrollbar-color: #cccccc #f5f5f5;
}

/* Works on Chrome, Edge, and Safari */
#footer-section ul.order-list .dropdown-content ::-webkit-scrollbar {
  width: 0.2px;
}

#footer-section ul.order-list .dropdown-content ::-webkit-scrollbar-track {
  background: #dddddd;
}

#footer-section ul.order-list .dropdown-content ::-webkit-scrollbar-thumb {
  background-color: #cccccc;
  border-radius: 1px;
  border: 0.2px solid #dddddd;
}
#footer-section ul.order-list .collection-box:hover .product-collection{
  display: flex;
  flex-wrap: nowrap;
  overflow-x: auto;
  margin-top: 10px;
}
#footer-section ul.order-list .dropdown-content .dropdown-src:hover {
  position: relative;
}

#footer-section ul.order-list .product-collection .dropdown-product {
  margin: 0;
  width: 100%;
  min-width: 100px;
  min-height: 100px;
}
#footer-section ul.order-list .product-collection:hover .dropdown-product,
#footer-section ul.order-list .product-collection:hover .dropdown-product img {
  width:100%;
}
#footer-section .collection-box .product-collection {
  gap: 3px;
  background: #000;
}
a{
  cursor:pointer;
}
/* Works on Firefox */
#footer-section ul.order-list .dropdown-content, #footer-section .product-collection {
  scrollbar-width: thin;
  scrollbar-color: #cccccc #f5f5f5;
}

/* Works on Chrome, Edge, and Safari */
#footer-section ul.order-list .dropdown-content ::-webkit-scrollbar,#footer-section .product-collection::-webkit-scrollbar {
  width: 0.2px;
}

#footer-section ul.order-list .dropdown-content ::-webkit-scrollbar-track,#footer-section .product-collection::-webkit-scrollbar-track {
  background: #dddddd;
}

#footer-section ul.order-list .dropdown-content ::-webkit-scrollbar-thumb,#footer-section .product-collection::-webkit-scrollbar-thumb {
  background-color: #cccccc;
  border-radius: 1px;
  border: 0.2px solid #dddddd;
}


@media screen and (max-width:600px) {
  #footer-section ul.order-list li {
      min-width: 25%;
  }
  #footer-section ul.order-list li p {
      font-size: 14px;
      line-height: 20px;
  }
  #footer-section ul.order-list .dropdown-content {
    max-width:100%;
    width:100%;
  }
  #footer-section ul.order-list .dropdown-content .dropdown-src span {
    font-size: 10px;
    line-height: 16px;
  }
}


@media screen and (max-width:480px) {
  #footer-section ul.order-list .dropdown-content {
    max-width:100%;
    width:100%;
  }
}
</style>

<div id="footer-section">
  <div class="page-width">
      <ul class="order-list">
        <li>
          <a class="dropdown-src">
              {% if section.settings.footer-ico-img != blank %}<img src="{{ section.settings.footer-ico-img | img_url: 'master' }}"/> {% endif %}
              {% if section.settings.ico-txt != blank %}<span>{{ section.settings.ico-txt }}</span> {% endif %}
              <div class="dropdown">
                <button class="dropbtn">SHOP</button>
                  <div class="dropdown-content">
                      {% assign collections_limit = 6 %} <!-- Set the limit here -->
                      {% for collection in collections limit: collections_limit %}
                      <div class="collection-box">
                          <a class="dropdown-src">
                            <img src="{{ collection | img_url: '30*30' }}" alt="{{ collection.image.alt }}" />
                            {% comment %} <span>{{ collection.title }}</span> {% endcomment %}
                         
                          <div class="product-collection">
                            {% for product in collection.products %}
                              <a href="{{ product.url }}" class="dropdown-product">
                                <img src="{{ product.featured_image | img_url: '50x50' }}" alt="{{ product.featured_image.alt }}" />
                                {% comment %} <span>{{ product.title }}</span> {% endcomment %}
                              </a>
                        
                            {% endfor %}  
                          </div>
                        </a>
                      
                      </div>
                    {% endfor %} 
                </div>
              </div>
            </a>
        </li>
        {% for block in section.blocks %}
          <li>
          <a href="{{ block.settings.footer-link }}">
            {% if block.settings.footer-ico-img != blank %}<img src="{{ block.settings.footer-ico-img | img_url: 'master' }}"/> {% endif %}
            {% if block.settings.ico-txt != blank %} <span>{{ block.settings.ico-txt }}</span> {% endif %}
          </a>
         {% endfor %}
        </li>
      </ul>

  </div>
</div>

{% schema %}
{
  "name": "footer-section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Slideshow"
    },
    {
      "type": "image_picker",
      "id": "footer-ico-img",
      "label": "Image"
    },
     {
       "type": "richtext",
       "id": "ico-txt",
       "label": "Footer Title"
     }
  ],
  "blocks": [
     {
       "name": "footer-column",
       "type": "slide",
       "settings": [
         {
           "type": "url",
           "id": "footer-link",
           "label":"Footer-link"
         },
         {
           "type": "image_picker",
           "id": "footer-ico-img",
           "label": "Image"
         },
          {
            "type": "richtext",
            "id": "ico-txt",
            "label": "Footer Title"
          }
       ]
     }
  ],
  "presets": [
    {
      "name": "footer-section",
      "settings": {
        "title": "Slideshow"
      },
      "blocks": [
        {
          "type": "slide"
        }
      ]
    }
  ]
}
{% endschema %}
